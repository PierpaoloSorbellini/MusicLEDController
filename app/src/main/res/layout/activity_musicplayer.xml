<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SeekBar
        android:id="@+id/musicplayer_time_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primaryTextColor"
        app:layout_constraintDimensionRatio="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicplayer_list" />

    <ImageButton
        android:id="@+id/musicplayer_play_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/empty"
        android:src="@drawable/icon_play"
        android:tint="@color/primaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/musicplayer_volume_bar"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/musicplayer_list"
        app:layout_constraintStart_toStartOf="@+id/musicplayer_list"
        app:layout_constraintTop_toBottomOf="@+id/musicplayer_time_bar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/musicplayer_previous_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/empty"
        android:src="@drawable/icon_previous_song"
        android:tint="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/musicplayer_play_button"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/musicplayer_play_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/musicplayer_play_button"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/musicplayer_next_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/empty"
        android:src="@drawable/icon_next_song"
        android:tint="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/musicplayer_play_button"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/musicplayer_play_button"
        app:layout_constraintTop_toTopOf="@+id/musicplayer_play_button"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/musicplayer_volume_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primaryTextColor"
        app:layout_constraintDimensionRatio="11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/musicplayer_volume_up"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/musicplayer_volume_down"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/musicplayer_time_text2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0:00"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintDimensionRatio="1.5"
        app:layout_constraintEnd_toEndOf="@+id/musicplayer_time_bar"
        app:layout_constraintTop_toBottomOf="@+id/musicplayer_time_bar" />

    <TextView
        android:id="@+id/musicplayer_time_text1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0:00"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintDimensionRatio="1.5"
        app:layout_constraintStart_toStartOf="@+id/musicplayer_time_bar"
        app:layout_constraintTop_toBottomOf="@+id/musicplayer_time_bar" />

    <ImageView
        android:id="@+id/musicplayer_volume_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:tint="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/musicplayer_volume_bar"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/musicplayer_volume_bar"
        app:srcCompat="@drawable/icon_min_volume" />

    <ImageView
        android:id="@+id/musicplayer_volume_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:tint="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/musicplayer_volume_bar"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/musicplayer_play_button"
        app:layout_constraintTop_toTopOf="@+id/musicplayer_volume_bar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_max_volume" />

    <ListView
        android:id="@+id/musicplayer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="170dp"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
